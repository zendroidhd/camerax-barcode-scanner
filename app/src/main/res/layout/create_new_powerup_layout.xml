<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    
    <data>
        
        <import type = "android.view.View"/>
        
        <variable
                name = "viewModel"
                type = "com.technologies.zenlight.earncredits.userInterface.home.powerUpFragment.createNewPowerup.CreatePowerupViewModel"/>
    
    </data>
    
    <FrameLayout
            android:id="@+id/layout_parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_color"
            android:clickable="true"
            android:focusable="true">
        
        <LinearLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@color/black_color"
                android:padding="15dp">
            
            <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create New PowerUp"
                    android:textAlignment="center"
                    android:textColor="@color/arcade_red"
                    android:textSize="20sp"
                    android:lineSpacingExtra="7dp"
                    style="@style/ArcadeTextView"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"/>
    
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    style="@style/ArcadeTextView"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="10dp"/>
            <EditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:maxLines="5"
                    android:layout_marginTop="5dp"
                    android:maxHeight="200dp"
                    android:hint="Ex. Spend an afteroon with my friends"
                    android:lineSpacingExtra="15dp"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences|textMultiLine"
                    style="@style/TextInputStyle"
                    android:textColor="@color/white"
                    android:textColorHint="@color/transparent_white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:fontFamily="@font/arcade_font"
                    />
            
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost:"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    style="@style/ArcadeTextView"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="10dp"/>
    
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity = "center_vertical"
                    android:layout_marginTop="5dp"
                    >
        
                <Spinner
                        android:id="@+id/spinner_cost"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="?attr/selectableItemBackground"
                        android:entries="@array/powerups_cost_list"
                        android:paddingEnd="25dp"/>
        
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="10dp"
                        android:tint="@color/transparent_white"
                        android:src="@drawable/ic_arrow_right" />
    
    
            </FrameLayout>
         
            
            <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="15dp"
                    >
                
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/btn_red_fab"
                        android:layout_gravity="center"
                        android:onClick = "@{()-> viewModel.onCreateNewPowerupClicked()}"
                        />
                
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_black_24dp"
                        android:layout_gravity="center"
                        android:tint="@color/black_color"/>
            
            </FrameLayout>
        
        </LinearLayout>
    
    </FrameLayout>

</layout>